<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="50dp">

    <TextView
            android:text="number"
            android:textSize="15dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/numberTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.009"
            app:layout_constraintVertical_bias="0.0"/>



    <TextView
            android:text="brand"
            android:textSize="15dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/brandTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.042"
            app:layout_constraintStart_toEndOf="@+id/numberTextView"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>

    <TextView
            android:text="kind"
            android:textSize="15dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/kindFileTextView"
            app:layout_constraintStart_toEndOf="@+id/brandTextView"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:text="type"
            android:textSize="15dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/typeNumberTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/kindFileTextView"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>

    <TextView
            android:text="power"
            android:textSize="15dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/powerTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/typeNumberTextView"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>

    <TextView
            android:text="revolution"
            android:textSize="15dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/revolutionTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/powerTextView"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>

    <TextView
            android:text="class"
            android:textSize="15dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/classTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/revolutionTextView"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>

</android.support.constraint.ConstraintLayout>