<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="50dp">

    <TextView
            android:text="test"
            android:textSize="15dp"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:id="@+id/test"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.009"
            app:layout_constraintVertical_bias="0.0"/>

    <View android:layout_width="1dp"
          android:background="@color/colorBlackLetters"
          android:layout_marginBottom="0dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/test"
          android:layout_marginEnd="8dp"
          android:layout_marginRight="8dp"
          android:layout_height="match_parent"
          android:layout_marginTop="0dp"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginLeft="8dp"
          android:layout_marginStart="8dp"
          app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>

    <View android:layout_width="1dp"
          android:background="@color/colorBlackLetters"
          android:layout_marginBottom="0dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/clientTextView"
          android:layout_marginEnd="8dp"
          android:layout_marginRight="8dp"
          android:layout_height="match_parent"
          android:layout_marginTop="0dp"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginLeft="8dp"
          android:layout_marginStart="8dp"
          app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>

    <View android:layout_width="1dp"
          android:background="@color/colorBlackLetters"
          android:layout_marginBottom="0dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/relationFileTextView"
          android:layout_marginEnd="8dp"
          android:layout_marginRight="8dp"
          android:layout_height="match_parent"
          android:layout_marginTop="0dp"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginLeft="8dp"
          android:layout_marginStart="8dp"
          app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>


    <TextView
            android:text="TextView"
            android:textSize="15dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/clientTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.042"
            app:layout_constraintStart_toEndOf="@+id/test"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>

    <TextView
            android:text="TextView"
            android:textSize="15dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/relationFileTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.042"
            app:layout_constraintStart_toEndOf="@+id/clientTextView"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>

    <TextView
            android:text="TextView"
            android:textSize="15dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/statusTextView"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.042"
            app:layout_constraintStart_toEndOf="@+id/relationFileTextView"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>

</android.support.constraint.ConstraintLayout>